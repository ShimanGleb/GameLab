@model GameLab.Models.Game

<link href="~/Content/GameDescription.css" rel="stylesheet" /><div class="row"><div class="col-md-6">
    @{        
        <h2>@Model.Title</h2>
        <div class="description year">Release: @Model.Release.Year</div><br>
        <div class="description genre">Genre:@for (int i = 0; i < ViewBag.Categories.Count; i++)
        {
            @: @ViewBag.Categories[i]
        }
        </div><br>
        <div class="description">@Model.FullDescription</div>
    }
</div></div>